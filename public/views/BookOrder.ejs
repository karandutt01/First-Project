  <link href="https://fonts.googleapis.com/css?family=Gugi" rel="stylesheet">
  <link rel="stylesheet" href="../css/product&homepage.css">
  <script src="../js/dashboard/productmodule.js"></script>
  <script src="../js/user/factories/productfact.js"></script>
  <script src="../js/utils/plus-minusbtn.js"></script>
