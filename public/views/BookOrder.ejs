<body ng-app="product">

    <nav class="navbar navbar-light bg-danger">
        <a class="navbar-brand" href="#">
            <img src="./logo/logo.png" class="img-fluid" width="50" height="45" alt="">
        </a>
        
        <div>
          <%sheetMenu.forEach(menu=>{%>
              <%if(menu.MainCategory=='Men'){%>
              <div class="btn-group menu">
                  <div class="dropdown">
                  <button class="btn btn-dark dropdown mx-1"  data-toggle="dropdown" id="dropdownMenu">
                      <%=menu.MainCategory%></button>
  
                      <div class="dropdown-menu dropdown">
                      <a class="dropdown-item btn btn-danger dropdown-header" data-toggle="dropdown"> 
                          <%=menu.Category%></a>
                          <div class="dropdown-link"><a class="dropdown-item" href="#"><%=menu.SubCategory%></a></div>
                      </div>
                  </div> 
              </div>
              <%}%>
  
              <%if(menu.MainCategory=='Women'){%>
              <div class="btn-group menu">
                  <div class="dropdown">
                      <button class="btn btn-dark dropdown mx-1"  data-toggle="dropdown" id="dropdownMenu">
                      <%=menu.MainCategory%></button>
                  
                      <div class="dropdown-menu dropdown">
                      <a class="dropdown-item btn btn-danger dropdown-header" data-toggle="dropdown"> 
                          <%=menu.Category%></a>
                          <div class="dropdown-link"><a class="dropdown-item" href="Jackets"><%=menu.SubCategory%></a></div>
                      </div>
                  </div> 
              </div>
              <%}%>
  
              <%if(menu.MainCategory=='Kids'){%>
              <div class="btn-group menu">
                  <div class="dropdown">
                      <button class="btn btn-dark dropdown mx-1"  data-toggle="dropdown" id="dropdownMenu">
                      <%=menu.MainCategory%></button>
                  
                      <div class="dropdown-menu dropdown">
                      <a class="dropdown-item btn btn-danger dropdown-header" data-toggle="dropdown"> 
                          <%=menu.Category%></a>
                          <div class="dropdown-link"><a class="dropdown-item" href="Jackets"><%=menu.SubCategory%></a></div>
                      </div>
                  </div> 
              </div>
              <%}%>
  
  
              <%if(menu.MainCategory=='Sports'){%>
              <div class="btn-group menu">
                  <div class="dropdown">
                      <button class="btn btn-dark dropdown mx-1"  data-toggle="dropdown" id="dropdownMenu">
                      <%=menu.MainCategory%></button>
                  
                      <div class="dropdown-menu dropdown">
                      <a class="dropdown-item btn btn-danger dropdown-header" data-toggle="dropdown"> 
                          <%=menu.Category%></a>
                          <div class="dropdown-link"><a class="dropdown-item" href="Jackets"><%=menu.SubCategory%></a></div>
                      </div>
                  </div> 
              </div>
              <%}%>
  
  
              <%if(menu.MainCategory=='Collection'){%>
              <div class="btn-group menu">
                  <div class="dropdown">
                      <button class="btn btn-dark dropdown mx-1"  data-toggle="dropdown" id="dropdownMenu">
                      <%=menu.MainCategory%></button>
                  
                      <div class="dropdown-menu dropdown">
                      <a class="dropdown-item btn btn-danger dropdown-header" data-toggle="dropdown"> 
                          <%=menu.Category%></a>
                          <div class="dropdown-link"><a class="dropdown-item" href="Jackets"><%=menu.SubCategory%></a></div>
                      </div>
                  </div> 
              </div>
              <%}%>
  
  
              <%if(menu.MainCategory=='Sale'){%>
              <div class="btn-group menu">
                  <div class="dropdown">
                      <button class="btn btn-dark dropdown mx-1"  data-toggle="dropdown" id="dropdownMenu">
                      <%=menu.MainCategory%></button>
                  
                      <div class="dropdown-menu dropdown">
                      <a class="dropdown-item btn btn-danger dropdown-header" data-toggle="dropdown"> 
                          <%=menu.Category%></a>
                          <div class="dropdown-link"><a class="dropdown-item" href="Jackets"><%=menu.SubCategory%></a></div>
                      </div>
                  </div> 
              </div>
              <%}%>
          <%})%>
        </div>
    
       
          <!-- <%=JSON.stringify(global.publicMenu)%> -->
    
       
        <form action="search" method="GET"  ng-controller="productcntrl">
            <div>
                <input class="searchbar" name="search" ng-model="product.search" type="text" placeholder="Search">
                <span><button class="btn btn-dark searchbtn" ng-click="search()"><i class="fas fa-search"></i></button></span>
            </div>
        </form>
    
    <button id="cartnav"  class="btn"><i class="fas fa-shopping-cart"></i></button>
    
    <a class="login" href="login.html">Login</a>
    <a class="register" href="register.html">Register</a>
    
    </nav>
  <h1 class="container-fluid mt-4">Review your Order</h1>
  <hr>
  

  <div class="container-fluid"> 
   <table class="table table-striped">
     <thead class="thead-dark">
       <tr>
           <th>Product</th>
           <th >Price</th>
           <th>Qty</th>
           <th>Sub Total</th>
       </tr>
     </thead> 
     
     <tbody>
       <%ItemDesc.forEach(item=>{%>
          <%if(item.MainCategory=='Men'){%>
              <tr>
                <td><img class="shoe-img" src="<%=ItemDesc[0].ImageUrl%>"></td>
                <span class="pic-link" style="color:black"><%=item.ProductName%></span>

                <td><span>&#x20b9</span><%=item.Price%></td>
                
                <td>
                  <select onchange="choose()">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                  </select>
                </td>
          
                <td id="Subtotal"><span>&#x20b9</span><%=item.Price%></td>
              </tr>
          <%}%>
        <%})%>
     </tbody>
  
     <!-- <tfoot class="alert alert-secondary">
       <tr>
         <td><a href="#" ng-click>Continue Shopping</td></a>
       </tr>
     </tfoot> -->
   </table>
  </div>
</body>
</html>

 
